#!/bin/bash
# Run all tests for the CIF parser and railway management system
# This script avoids tests that start servers or require external connections

# Set colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running CIF Parser Tests${NC}"
echo "=========================="
python -m unittest tests/test_cif_parser_basic.py

echo -e "\n${YELLOW}Running STP Indicator Tests${NC}"
echo "=========================="
python -m unittest tests/test_stp_main.py tests/test_stp_indicators_api.py tests/test_stp_precedence.py

echo -e "\n${GREEN}All tests completed!${NC}"